<% layout("layouts/boilerplate") %>

<div class="form-wrapper">
  <div class="form-card">
    <h3>Create New Listing</h3>

    <form method="POST" action="/listings">

      <div class="form-group">
        <label>Title</label>
        <input type="text" name="listing[title]" required />
      </div>

      <div class="form-group">
        <label>Description</label>
        <textarea name="listing[description]"></textarea>
      </div>

      <div class="form-group">
        <label>Image URL</label>
        <input type="text" name="listing[image][url]" />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label>Price</label>
          <input type="number" name="listing[price]" />
        </div>

        <div class="form-group">
          <label>Location</label>
          <input type="text" name="listing[location]" />
        </div>
      </div>

      <div class="form-group">
        <label>Country</label>
        <input type="text" name="listing[country]" />
      </div>

      <button class="btn-submit">Create</button>
    </form>
  </div>
</div>
